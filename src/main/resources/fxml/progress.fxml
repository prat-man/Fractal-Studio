<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="in.pratanumandal.fractalstudio.gui.ProgressController">
    <children>
        <VBox fx:id="progressContainer" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Please wait. The fractal is being generated."/>
                <ProgressBar fx:id="progress" progress="0.0"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
