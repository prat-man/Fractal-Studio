<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.ToggleSwitch?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="in.pratanumandal.fractalstudio.gui.Controller">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#open" text="Open"/>
                        <MenuItem fx:id="save" disable="true" mnemonicParsing="false" onAction="#save" text="Save"/>
                        <MenuItem mnemonicParsing="false" onAction="#export" text="Export as Image"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" onAction="#settingsDialog" text="Settings"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Plot">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#mandelbrot" text="Mandelbrot"/>
                        <MenuItem mnemonicParsing="false" onAction="#burningShip" text="Burning Ship"/>
                        <MenuItem mnemonicParsing="false" onAction="#julia" text="Julia"/>
                        <MenuItem mnemonicParsing="false" onAction="#newtonRaphson" text="Newton Raphson"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#about" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox alignment="TOP_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER">
                    <children>
                        <Button fx:id="update" disable="true" graphicTextGap="5.0" minHeight="35.0"
                                mnemonicParsing="false" onAction="#updateFractal" text="Update Fractal">
                            <graphic>
                                <ImageView pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../img/reload.png"/>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <Separator layoutX="20.0" layoutY="48.0"/>
                <ToggleSwitch fx:id="smooth" selected="true" text="Smooth"/>
                <Separator/>
                <ToggleSwitch fx:id="inverted" text="Inverted"/>
                <ToggleSwitch fx:id="monochrome" layoutX="20.0" layoutY="20.0" text="Monochrome"/>
                <Separator/>
                <ToggleSwitch fx:id="showOrigin" layoutX="100.0" layoutY="89.0" text="Show origin"/>
                <Separator layoutX="20.0" layoutY="117.0"/>
                <ToggleSwitch fx:id="showCenter" layoutX="109.0" layoutY="208.0" text="Show center"/>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Label text="Center X"/>
                        <TextField fx:id="centerX" alignment="CENTER_RIGHT" layoutX="61.0" layoutY="10.0"
                                   promptText="Real" text="0"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Label text="Center Y"/>
                        <TextField fx:id="centerY" alignment="CENTER_RIGHT" layoutX="61.0" layoutY="10.0"
                                   promptText="Imaginary" text="0"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#resetCenter" text="Reset"/>
                        <ToggleButton fx:id="pickCenter" mnemonicParsing="false" text="Pick Center"/>
                    </children>
                </HBox>
                <Separator layoutX="20.0" layoutY="236.0"/>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Label text="Scale"/>
                        <Spinner fx:id="scale" editable="true">
                            <valueFactory>
                                <SpinnerValueFactory.DoubleSpinnerValueFactory amountToStepBy="1.0" initialValue="2.0"
                                                                               max="100.0" min="1.0"/>
                            </valueFactory>
                            <tooltip>
                                <Tooltip maxWidth="200"
                                         text="The number of units to show from the center in either direction on both axes when zoom = 1"
                                         wrapText="true"/>
                            </tooltip>
                        </Spinner>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="20.0" layoutY="249.0" spacing="10.0">
                    <children>
                        <Label text="Zoom"/>
                        <Spinner fx:id="zoom" editable="true">
                            <valueFactory>
                                <SpinnerValueFactory.DoubleSpinnerValueFactory amountToStepBy="1.0" initialValue="1.0"
                                                                               max="10000000000.0" min="1.0"/>
                            </valueFactory>
                        </Spinner>
                    </children>
                </HBox>
                <Separator/>
                <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="433.0" spacing="10.0">
                    <children>
                        <Label text="Iterations"/>
                        <Spinner fx:id="iterationLimit" editable="true">
                            <valueFactory>
                                <SpinnerValueFactory.DoubleSpinnerValueFactory amountToStepBy="1.0" initialValue="100.0"
                                                                               max="100000.0" min="1.0"/>
                            </valueFactory>
                        </Spinner>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </left>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label fx:id="fractalName"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="fractalFunction"/>
                    </children>
                </HBox>
                <ScrollPane fx:id="canvasScroll" pannable="true" prefHeight="300.0" prefWidth="400.0"
                            VBox.vgrow="ALWAYS">
                    <content>
                        <StackPane fx:id="canvasHolder">
                            <children>
                                <Canvas fx:id="canvas" height="500.0" width="500.0"/>
                            </children>
                        </StackPane>
                    </content>
                </ScrollPane>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
